---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import ContentReveal from "../components/ui/ContentReveal.astro";
import TagList from "../components/ui/TagList.astro";
---

<Layout title="Art">
  <ContentReveal id="artContent" class="content">
    <PageHeader
      title="Art & Visuals"
      subtitle="Visual experiments, game concepts and miscellaneous digital art"
      titleClass="title-gradient"
    />

    <div class="sections animate-content-medium">
      <div class="section animate-slideup" style="animation-delay: 0.8s">
        <h2 class="section-title animate-title-delayed">Original Collections</h2>
        <div class="art-grid">
          <article class="art-item animate-content-fast" style="animation-delay: 1.2s">
            <a href="/art/earth-villages" class="art-link">
              <div class="art-preview">
                <!-- <div class="art-star">★</div> -->
                <div class="art-thumbnail earthvillage"></div>
              </div>
              <div class="art-info">
                <h3 class="art-name">Starscape Earth Villages</h3>
                <p class="art-description">
                  Concept art for upcoming Starscape Earth Villages SaaS and its first network
                </p>
                <TagList
                  tags={["App Concept", "Backgrounds", "AI Art", "Gallery"]}
                />
              </div>
            </a>
          </article>

          <article class="art-item animate-content-fast" style="animation-delay: 1.3s">
            <a href="/art/evershade-dream" class="art-link">
              <div class="art-preview">
                <!-- <div class="art-star">★</div> -->
                <div class="art-thumbnail evershade"></div>
              </div>
              <div class="art-info">
                <h3 class="art-name">A Starscape Journey: Evershade Dream</h3>
                <p class="art-description">
                  A surreal exploration of light, shadow, and dreamlike
                  landscapes
                </p>
                <TagList
                  tags={["Game Concept", "AI Art", "Surreal", "Gallery"]}
                />
              </div>
            </a>
          </article>

          <article class="art-item animate-content-fast" style="animation-delay: 1.4s">
            <a href="/art/folded-horizons" class="art-link">
              <div class="art-preview">
                <!-- <div class="art-star">★</div> -->
                <div class="art-thumbnail horizons"></div>
              </div>
              <div class="art-info">
                <h3 class="art-name">Folded Horizons</h3>
                <p class="art-description">
                  Earthscapes split by a central black line, creating the
                  illusion of viewing nature through the binding of an infinite
                  atlas.
                </p>
                <TagList tags={["Surreal", "AI Art", "Gallery"]} />
              </div>
            </a>
          </article>

          <article class="art-item coming-soon animate-content-fast" style="animation-delay: 1.5s">
            <div class="art-link">
              <div class="art-preview">
                <div class="art-thumbnail placeholder"></div>
              </div>
              <div class="art-info">
                <h3 class="art-name">Coming Soon</h3>
                <p class="art-description">
                  uploading backlog + new inspiration when it strikes
                </p>
                <TagList tags={["soon™"]} />
              </div>
            </div>
          </article>
        </div>
      </div>
      <div class="section animate-slideup" style="animation-delay: 1.0s">
        <h2 class="section-title animate-title-delayed">Other Collections</h2>
        <div class="art-grid">
          <article class="art-item animate-content-fast" style="animation-delay: 1.5s">
            <a href="/art/web-one-world" class="art-link">
              <div class="art-preview">
                <!-- <div class="art-star">★</div> -->
                <div class="art-thumbnail one-world"></div>
              </div>
              <div class="art-info">
                <h3 class="art-name">Web One World</h3>
                <p class="art-description">
                  a lil collection of old web art I enjoy.
                </p>
                <TagList tags={["Gallery", "2000s"]} />
              </div>
            </a>
          </article>
          <article class="art-item animate-content-fast" style="animation-delay: 1.6s">
            <a href="/art/green" class="art-link">
              <div class="art-preview">
                <!-- <div class="art-star">★</div> -->
                <div class="art-thumbnail green"></div>
              </div>
              <div class="art-info">
                <h3 class="art-name">Green</h3>
                <p class="art-description">
                  i like
                </p>
                <TagList tags={["Green", "Gallery"]} />
              </div>
            </a>
          </article>
        </div>
      </div>
    </div>
  </ContentReveal>
</Layout>

<style>
  .art-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .art-item {
    transition: all 0.3s ease;
  }

  .art-item.coming-soon {
    opacity: 0.6;
  }

  .art-link {
    display: block;
    background: var(--secondary-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .art-link:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
    border-color: var(--accent-bg);
  }

  .art-preview {
    position: relative;
    height: 200px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .art-star {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 32px;
    height: 32px;
    background: var(--accent-bg);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: bold;
    z-index: 2;
  }

  .art-thumbnail {
    position: absolute;
    inset: 0;
    border-radius: 8px;
  }

  .art-thumbnail.evershade {
    background: url("https://cdn.jsdelivr.net/gh/brucestarlove/starlove-assets@main/art/rpg_painted_scenes/evershade_map01.webp");
  }

  .art-thumbnail.earthvillage {
    background: url("https://cdn.jsdelivr.net/gh/brucestarlove/starlove-assets@main/art/earth-villages/image05-thumbnail.webp");
  }

  .art-thumbnail.horizons {
    background: url("https://cdn.jsdelivr.net/gh/brucestarlove/starlove-assets@main/art/folded_horizons/image01.webp");
    background-size: cover;
    background-position: center;
  }

  .art-thumbnail.one-world {
    background: url("https://cdn.jsdelivr.net/gh/brucestarlove/starlove-assets@main/art/web_one_world/Shakurus_SC1_Art1.webp");
    background-size: cover;
    background-position: center;
  }
  
  .art-thumbnail.green {
    background: url("https://cdn.jsdelivr.net/gh/brucestarlove/starlove-assets@main/art/green/space-head.webp");
    background-size: cover;
    background-position: center;
  }

  .art-thumbnail.placeholder {
    background: linear-gradient(
      135deg,
      var(--border-color) 0%,
      var(--secondary-bg) 50%,
      var(--border-color) 100%
    );
  }

  .art-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .art-description {
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .art-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .art-tag {
    padding: 0.25rem 0.75rem;
    background: var(--primary-bg);
    color: var(--text-secondary);
    font-size: 0.8rem;
    border-radius: 6px;
    border: 1px solid var(--border-color);
    font-weight: 500;
  }

  /* Using global keyframes: titleReveal, contentReveal */

  @media (max-width: 768px) {
    .art-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .art-link {
      padding: 1rem;
    }

    .art-preview {
      height: 150px;
    }
  }
</style>
