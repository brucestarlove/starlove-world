  description="Concept art for upcoming Starscape Earth Villages SaaS and its first network"
  titleClass="text-gradient-earthvillage mb-0"
  stats={[
    { label: "First Gen", value: firstGenImages.length },
    { label: "Village Portals", value: earthPortalImages.length },
    { label: "App Concept", value: "" },
    { label: "Backgrounds", value: "" },
    { label: "AI Art", value: "" },
    { label: "Midjourney AI", value: "" },
    { label: "2025", value: "" },
  ]}
>
  <MasonryGallery images={firstGenImages} galleryName="earth-villages-gallery">
    <TextLightboxItem
      galleryName="earth-villages-gallery"
      href="#about"
      title="Earth Villages"
      description="Learn more about my Earth Villages inspiration and platform concept."
      icon="document"
    />
  </MasonryGallery>

  <LightboxContent
    id="about"
    theme="earthvillage"
    sections={lightboxSections}
    footer=""
  />

  <!-- Earth Portal Section -->
  <BonusGallery
    title="Earth Village Portal"
    images={earthPortalImages}
    galleryName="earth-villages-bonus-gallery"
    theme="earthvillage"
  />
</ArtPageLayout>
