    title="Feminine"
    images={feminineImages}
    galleryName="web-one-world-gallery"
    theme="starscape"
  />

  <!-- Medieval Bonus Gallery Section -->
  <BonusGallery
    title="Medieval"
    images={medievalImages}
    galleryName="web-one-world-gallery"
    theme="starscape"
  />
</ArtPageLayout>
