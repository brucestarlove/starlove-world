---

<ArtPageLayout
  title="Web One World"
  subtitle=""
  description="Digital landscapes exploring connection, transformation, and identity in our networked reality."
  gameDescription=""
  titleClass="text-gradient-starscape mb-0"
  stats={[
    { label: "Main Series", value: galleryImages.length },
    { label: "Dragon", value: dragonImages.length },
    { label: "Womanscape", value: womanscapeImages.length },
    { label: "Digital", value: "" },
    { label: "AI Art", value: "" },
    { label: "2025", value: "" },
  ]}
>
  <MasonryGallery images={galleryImages} galleryName="web-one-world-gallery">
    <TextLightboxItem
      galleryName="web-one-world-gallery"
      href="#about-web-one-world"
      title="About the Series"
      description="a lil collection of old web art"
      icon="story"
    />
  </MasonryGallery>

  <LightboxContent
    id="about-web-one-world"
    theme="custom"
    customGradient="linear-gradient(135deg, #f59e0b 0%, #fbbf24 50%, #f97316 100%)"
    sections={lightboxSections}
    footer=""
  />

  <!-- Dragon Bonus Gallery Section -->
  <BonusGallery
    title="Dragon"
    images={dragonImages}
    galleryName="web-one-world-dragon-gallery"
    theme="starscape"
  />

  <!-- Womanscape Bonus Gallery Section -->
  <BonusGallery
    title="Womanscape"
    images={womanscapeImages}
    galleryName="web-one-world-womanscape-gallery"
    theme="starscape"
  />
</ArtPageLayout>
