---

<ArtPageLayout
  title="Web One World"
  subtitle=""
  description="a lil collection of old web art I enjoy."
  gameDescription=""
  titleClass="text-gradient-starscape mb-0"
  stats={[
    {
      label: "Images",
      value:
        galleryImages.length +
        dolphinImages.length +
        dragonImages.length +
        feminineImages.length + 
        medievalImages.length,
    },
    { label: "Gallery", value: "" },
    { label: "2000s", value: "" },
  ]}
>
  <MasonryGallery images={galleryImages} galleryName="web-one-world-gallery">
    <TextLightboxItem
      galleryName="web-one-world-gallery"
      href="#about-web-one-world"
      title="About the Series"
      description="a lil collection of old web art"
      icon="story"
    />
  </MasonryGallery>

  <LightboxContent
    id="about-web-one-world"
    theme="custom"
    customGradient="linear-gradient(135deg, #f59e0b 0%, #fbbf24 50%, #f97316 100%)"
    sections={lightboxSections}
    footer=""
  />

  <!-- Dolphin Bonus Gallery Section -->
  <BonusGallery
    title="Dolphin"
    images={dolphinImages}
    galleryName="web-one-world-gallery"
    theme="starscape"
  />

  <!-- Dragon Bonus Gallery Section -->
  <BonusGallery
    title="Dragon"
    images={dragonImages}
    galleryName="web-one-world-gallery"
    theme="starscape"
  />

  <!-- Divine Feminine Bonus Gallery Section -->
