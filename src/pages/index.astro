---
import Layout from '../layouts/Layout.astro';
import StarExplosion from '../components/StarExplosion.astro';
import PostFilter from '../components/PostFilter.astro';

// Sample post data
const posts = [
  {
    id: 1,
    title: "Building Ultra-Light Astro Apps",
    tags: ["tech", "project"],
    color: "#3b82f6",
    excerpt: "Exploring the power of Astro for creating lightning-fast static sites with modern UI components."
  },
  {
    id: 2,
    title: "The Art of Minimalist Design",
    tags: ["hobby", "idea"],
    color: "#10b981",
    excerpt: "How simplicity in design can create more impactful user experiences."
  },
  {
    id: 3,
    title: "Open Source Contribution Guide",
    tags: ["oc", "tech"],
    color: "#f59e0b",
    excerpt: "My journey contributing to open source projects and what I've learned along the way."
  },
  {
    id: 4,
    title: "Sustainable Living in 2024",
    tags: ["life", "movement"],
    color: "#06b6d4",
    excerpt: "Small changes that make a big difference in our environmental impact."
  },
  {
    id: 5,
    title: "Community Tech Meetup",
    tags: ["event", "tech"],
    color: "#8b5cf6",
    excerpt: "Join us for an evening of tech talks and networking in the local community."
  },
  {
    id: 6,
    title: "Interesting Article on AI Ethics",
    tags: ["share", "tech"],
    color: "#ef4444",
    excerpt: "A thoughtful piece on the ethical implications of AI in modern society."
  }
];
---

