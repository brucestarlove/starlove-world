---
export interface Props {
  categories: string[];
  categoryColors: Record<string, string>;
  class?: string;
}

const { categories, categoryColors, class: className = "" } = Astro.props;
---

<div class={`category-filter ${className}`}>
  <button class="category-btn active" data-category="all">
    All
  </button>
  {categories.map((category) => (
    <button 
      class="category-btn" 
      data-category={category}
      style={`--category-color: ${categoryColors[category] || '#666'}`}
    >
      {category}
    </button>
  ))}
</div>

<style>
  .category-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .category-btn {
    background: var(--cyber-bg-secondary);
    border: 1px solid var(--cyber-border);
    color: var(--cyber-text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    text-transform: capitalize;
    position: relative;
  }

  .category-btn[data-category]:not([data-category="all"]) {
    border-color: var(--category-color, var(--cyber-border));
  }

  .category-btn:hover {
    background: var(--category-color, var(--cyber-accent));
    color: var(--cyber-bg);
    border-color: var(--category-color, var(--cyber-accent));
  }

  .category-btn.active {
    background: var(--category-color, var(--cyber-accent));
    color: var(--cyber-bg);
    border-color: var(--category-color, var(--cyber-accent));
  }

  .category-btn[data-category="all"]:hover,
  .category-btn[data-category="all"].active {
    background: var(--cyber-accent);
    color: var(--cyber-bg);
    border-color: var(--cyber-accent);
  }
</style>